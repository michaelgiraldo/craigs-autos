<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex, nofollow" />
    <title>Send customer message</title>
    <style>
      :root {
        --bg: #f6f7f9;
        --card: #ffffff;
        --text: #111827;
        --muted: #6b7280;
        --border: #e5e7eb;
        --accent: #141cff;
      }
      * {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        padding: 24px;
        background: var(--bg);
        color: var(--text);
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
      }
      .wrap {
        max-width: 720px;
        margin: 0 auto;
      }
      h1 {
        margin: 0 0 8px;
        font-size: 20px;
        line-height: 1.2;
      }
      p {
        margin: 0 0 16px;
        color: var(--muted);
        line-height: 1.4;
        font-size: 14px;
      }
      .actions {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin: 0 0 16px;
      }
      .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 10px 14px;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: var(--card);
        color: var(--text);
        font-size: 13px;
        line-height: 1;
        text-decoration: none;
        cursor: pointer;
      }
      .btn--primary {
        background: var(--accent);
        border-color: var(--accent);
        color: #ffffff;
      }
      .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 14px;
        padding: 16px;
      }
      .label {
        font-size: 12px;
        color: var(--muted);
        margin: 0 0 6px;
      }
      .value {
        margin: 0 0 14px;
        font-size: 14px;
        line-height: 1.4;
        color: var(--text);
        word-break: break-word;
        white-space: pre-wrap;
      }
      pre.value {
        font-family: inherit;
      }
      details {
        margin-top: 14px;
      }
      summary {
        cursor: pointer;
        color: var(--muted);
        font-size: 13px;
      }
      .hint {
        margin-top: 10px;
        font-size: 13px;
        color: var(--muted);
        line-height: 1.4;
      }
      .error {
        color: #b91c1c;
      }
    </style>
  </head>
  <body>
    <main class="wrap">
      <h1>Send customer message</h1>
      <p id="status">Preparing your draft…</p>

      <div class="actions">
        <a id="open-sms" class="btn btn--primary" href="#">Send via SMS</a>
        <button id="open-google-voice" class="btn" type="button">Send via Google Voice</button>
        <a id="call" class="btn" href="#">Call</a>
        <button id="copy-phone" class="btn" type="button">Copy phone</button>
        <button id="copy-body" class="btn" type="button">Copy message</button>
      </div>

      <div class="card">
        <div class="label">To</div>
        <div id="to" class="value">—</div>

        <div class="label">Message</div>
        <pre id="body" class="value">—</pre>
      </div>

      <details>
        <summary>Having trouble?</summary>
        <div class="hint">
          If a channel doesn’t open, use “Copy message” and paste the draft manually.
        </div>
      </details>
    </main>

    <script type="module">
      const statusEl = document.getElementById('status');
      const toEl = document.getElementById('to');
      const bodyEl = document.getElementById('body');
      const openSmsEl = document.getElementById('open-sms');
      const openGoogleVoiceBtn = document.getElementById('open-google-voice');
      const callEl = document.getElementById('call');
      const copyPhoneBtn = document.getElementById('copy-phone');
      const copyBodyBtn = document.getElementById('copy-body');
      const FETCH_TIMEOUT_MS = 8_000;

      function getToken() {
        const url = new URL(window.location.href);
        const qsToken = url.searchParams.get('token');
        if (qsToken && qsToken.trim()) return qsToken.trim();

        // Best-effort support for /message/<token>/ if a rewrite rule is added later.
        const parts = url.pathname.split('/').filter(Boolean);
        const messageIndex = parts.indexOf('message');
        if (messageIndex !== -1 && parts[messageIndex + 1]) return parts[messageIndex + 1];

        return '';
      }

      function getChannel() {
        const url = new URL(window.location.href);
        const value = url.searchParams.get('channel');
        return value && value.trim() ? value.trim().toLowerCase() : '';
      }

      function normalizeE164Digits(phone) {
        const digits = String(phone || '').replace(/[^0-9]/g, '');
        if (!digits) return '';
        if (digits.length === 10) return `1${digits}`;
        if (digits.length === 11 && digits.startsWith('1')) return digits;
        if (digits.length >= 7 && digits.length <= 15) return digits;
        return '';
      }

      function buildTelHref(phone) {
        const e164Digits = normalizeE164Digits(phone);
        if (!e164Digits) return '#';
        return `tel:+${e164Digits}`;
      }

      function buildSmsHref(phone, body) {
        const e164Digits = normalizeE164Digits(phone);
        if (!e164Digits) return '#';
        const to = `+${e164Digits}`;
        const text = typeof body === 'string' ? body : '';
        if (!text.trim()) return `sms:${to}`;
        // Works on iOS/macOS; some clients accept `?body=` as well, but `?&body=` is broadly compatible.
        return `sms:${to}?&body=${encodeURIComponent(text)}`;
      }

      function buildGoogleVoiceHref(phone) {
        const e164Digits = normalizeE164Digits(phone);
        if (!e164Digits) return 'https://voice.google.com/u/0/messages';
        return `https://voice.google.com/u/0/messages?itemId=${encodeURIComponent(`t.+${e164Digits}`)}`;
      }

      function withFetchTimeout(init = {}) {
        if (typeof AbortSignal !== 'undefined' && typeof AbortSignal.timeout === 'function') {
          return { ...init, signal: AbortSignal.timeout(FETCH_TIMEOUT_MS) };
        }
        return init;
      }

      async function getOutputs() {
        try {
          const res = await fetch('/amplify_outputs.json', withFetchTimeout({ cache: 'no-store' }));
          if (!res.ok) return null;
          return await res.json();
        } catch {
          return null;
        }
      }

      async function run() {
        const token = getToken();
        const channel = getChannel();
        const useGoogleVoice = channel === 'google_voice';
        if (!token) {
          statusEl.textContent = 'Missing token.';
          statusEl.classList.add('error');
          return;
        }

        const outputs = await getOutputs();
        const apiUrl = outputs?.custom?.chatkit_message_link_url;
        if (typeof apiUrl !== 'string' || !apiUrl.trim()) {
          statusEl.textContent = 'Message link service is not configured.';
          statusEl.classList.add('error');
          return;
        }

        let data;
        try {
          const res = await fetch(
            `${apiUrl}?token=${encodeURIComponent(token)}`,
            withFetchTimeout({ cache: 'no-store' })
          );
          data = await res.json();
          if (!res.ok || !data?.ok) {
            throw new Error(data?.error || `HTTP ${res.status}`);
          }
        } catch {
          statusEl.textContent = 'This link is invalid or expired.';
          statusEl.classList.add('error');
          return;
        }

        const to = data.to_phone;
        const body = data.body || '';
        const smsHref = buildSmsHref(to, body);
        const googleVoiceHref = buildGoogleVoiceHref(to);
        const telHref = buildTelHref(to);

        toEl.textContent = to || '—';
        bodyEl.textContent = body || '—';
        openSmsEl.href = smsHref;
        callEl.href = telHref;

        openGoogleVoiceBtn.addEventListener('click', async () => {
          if (body) {
            try {
              await navigator.clipboard.writeText(String(body));
            } catch {}
          }
          try {
            window.open(googleVoiceHref, '_blank', 'noopener,noreferrer');
          } catch {
            window.location.href = googleVoiceHref;
          }
        });

        copyPhoneBtn.addEventListener('click', async () => {
          if (!to) return;
          try {
            await navigator.clipboard.writeText(String(to));
            copyPhoneBtn.textContent = 'Copied';
            setTimeout(() => (copyPhoneBtn.textContent = 'Copy phone'), 1200);
          } catch {}
        });

        copyBodyBtn.addEventListener('click', async () => {
          if (!body) return;
          try {
            await navigator.clipboard.writeText(String(body));
            copyBodyBtn.textContent = 'Copied';
            setTimeout(() => (copyBodyBtn.textContent = 'Copy message'), 1200);
          } catch {}
        });

        statusEl.textContent = useGoogleVoice
          ? 'Draft ready for Google Voice.'
          : 'Draft ready. Choose a channel.';

        if (!useGoogleVoice) {
          // Best-effort auto-open. If the browser blocks it, the primary button remains.
          setTimeout(() => {
            try {
              window.location.href = smsHref;
            } catch {}
          }, 50);
        }
      }

      run();
    </script>
  </body>
</html>
