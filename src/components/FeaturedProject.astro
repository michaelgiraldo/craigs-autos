---
import { Image } from 'astro:assets';
import LocalizedLink from './LocalizedLink.astro';
import { getProject } from '../data/projects/index.js';

const { projectId, locale = 'en' } = Astro.props;
const project = getProject(projectId);

if (!project) {
	throw new Error(`Project not found: ${projectId}`);
}

const resolveCopy = (value) => value?.[locale] ?? value?.en ?? '';
const featuredImageId = project.featuredImageId ?? project.images?.[0]?.id;
const featuredImage = project.images?.find((image) => image.id === featuredImageId) ?? project.images?.[0];
const featuredKicker = resolveCopy(project.copy?.featuredKicker) || 'Featured project';
const featuredTitle = resolveCopy(project.copy?.title) || 'Project';
const featuredSummary = resolveCopy(project.copy?.lead) || '';
const featuredCta = resolveCopy(project.copy?.featuredCta) || 'View project';
---

<section class="featured-project" aria-label={featuredKicker}>
	<div class="container">
		<div class="featured-project__card">
			{featuredImage ? (
				<div class="featured-project__media">
					<Image
						src={featuredImage.asset}
						alt={resolveCopy(featuredImage.alt)}
						loading="lazy"
						decoding="async"
						sizes="(min-width: 1024px) 420px, 90vw"
					/>
				</div>
			) : null}
			<div class="featured-project__content">
				<p class="featured-project__kicker">{featuredKicker}</p>
				<h3>{featuredTitle}</h3>
				{featuredSummary ? <p>{featuredSummary}</p> : null}
				<LocalizedLink pageKey="buickEight" locale={locale} class="featured-project__link">
					{featuredCta}
				</LocalizedLink>
			</div>
		</div>
	</div>
</section>

<style>
	.featured-project {
		padding: 2.5rem 0 2.75rem;
	}

	.featured-project__card {
		display: grid;
		gap: 1.5rem;
		grid-template-columns: minmax(0, 1fr);
		background: var(--color-surface);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
		box-shadow: var(--shadow-sm);
		overflow: hidden;
	}

	.featured-project__media img {
		display: block;
		width: 100%;
		height: auto;
	}

	.featured-project__content {
		padding: 1.4rem 1.5rem 1.7rem;
		display: grid;
		gap: 0.75rem;
	}

	.featured-project__kicker {
		margin: 0;
		font-size: 0.85rem;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: var(--color-muted);
	}

	.featured-project__content h3 {
		margin: 0;
		font-size: clamp(1.4rem, 2.2vw, 1.9rem);
		color: var(--color-ink);
	}

	.featured-project__content p {
		margin: 0;
		color: var(--color-muted);
		font-size: 1rem;
	}

	.featured-project__link {
		display: inline-flex;
		align-items: center;
		gap: 0.35rem;
		font-weight: 600;
		text-decoration: none;
	}

	.featured-project__link::after {
		content: 'â†’';
		transition: transform 150ms ease;
	}

	.featured-project__link:hover::after {
		transform: translateX(3px);
	}

	@media (min-width: 960px) {
		.featured-project__card {
			grid-template-columns: minmax(0, 1.05fr) minmax(0, 1fr);
		}
	}
</style>
