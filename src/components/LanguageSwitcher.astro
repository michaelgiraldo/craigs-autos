---
const {
	links,
	currentLabel = 'EN',
	ariaLabel = 'Language',
	id = 'lang-switcher',
	mode = 'toggle',
} = Astro.props;
const panelId = `${id}-panel`;
---

{mode === 'panel' ? (
	<div class="lang-switcher__overlay" data-lang-switcher-overlay hidden>
		<div
			class="lang-switcher__panel"
			role="dialog"
			aria-modal="true"
			aria-label={ariaLabel}
			id={panelId}
			tabindex="-1"
			data-lang-switcher-panel
		>
			<div class="lang-switcher__panel-header">
				<span class="lang-switcher__panel-title">{ariaLabel}</span>
				<button
					class="lang-switcher__close"
					type="button"
					aria-label="Close"
					data-lang-switcher-close
				>
					<span aria-hidden="true">Ã—</span>
				</button>
			</div>
			<div class="lang-switcher__search">
				<input
					class="lang-switcher__search-input"
					type="search"
					inputmode="search"
					placeholder={ariaLabel}
					aria-label={ariaLabel}
					data-lang-switcher-search
				/>
			</div>
			<ul class="lang-switcher__menu" aria-label={ariaLabel} data-lang-switcher-list>
				{links.map((link) => (
					<li data-lang-switcher-item data-search={link.searchLabel ?? link.menuLabel ?? link.label}>
						<a class="lang-switcher__menu-link" href={link.href}>
							{link.menuLabel ?? link.label}
						</a>
					</li>
				))}
			</ul>
		</div>
	</div>
) : (
	<nav class="lang-switcher" aria-label={ariaLabel} data-lang-switcher>
		<button
			class="lang-switcher__toggle"
			type="button"
			aria-haspopup="dialog"
			aria-expanded="false"
			aria-controls={panelId}
			data-lang-switcher-toggle
		>
			<svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
				<circle cx="12" cy="12" r="10" />
				<path d="M2 12h20" />
				<path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
			</svg>
			<span class="lang-switcher__summary-text">{currentLabel}</span>
			<svg class="icon lang-switcher__chevron" viewBox="0 0 24 24" aria-hidden="true">
				<path d="m6 9 6 6 6-6" />
			</svg>
		</button>
	</nav>
)}
