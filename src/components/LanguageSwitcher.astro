---
const { links, currentLabel = 'EN', ariaLabel = 'Language' } = Astro.props;
---

<nav class="lang-switcher" aria-label={ariaLabel}>
	<ul class="lang-switcher__list" aria-label={ariaLabel}>
		{links.map((link) => (
			<li>
				<a class="lang-switcher__link" href={link.href}>
					{link.label}
				</a>
			</li>
		))}
	</ul>
	<details class="lang-switcher__details">
		<summary class="lang-switcher__summary">
			<svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
				<circle cx="12" cy="12" r="10" />
				<path d="M2 12h20" />
				<path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
			</svg>
			<span class="lang-switcher__summary-text">{currentLabel}</span>
			<svg class="icon lang-switcher__chevron" viewBox="0 0 24 24" aria-hidden="true">
				<path d="m6 9 6 6 6-6" />
			</svg>
		</summary>
		<ul class="lang-switcher__menu" aria-label={ariaLabel}>
			{links.map((link) => (
				<li>
					<a class="lang-switcher__menu-link" href={link.href}>
						{link.label}
					</a>
				</li>
			))}
		</ul>
	</details>
</nav>
